  "description": "",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node --experimental-specifier-resolution=node dist/server.js",
    "build": "rimraf dist && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "prebuild": "rimraf dist",
    "postbuild": "echo 'Build completed'",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest",
    "test:serial": "vitest run --sequence.concurrent=false --reporter=verbose",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:file": "vitest run --sequence.concurrent=false --reporter=verbose",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:fresh": "tsx src/scripts/migrate.ts --fresh"
  },
